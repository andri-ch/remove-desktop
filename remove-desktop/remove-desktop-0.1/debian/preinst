#!/bin/sh
# preinst script for remove-metapackage
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# find path to virtualenv 
virtualenv=`which virtualenv`

# path to install package
#DESTDIR=/opt/remove-desktop
DESTDIR=/usr/lib/remove-desktop

# python dependencies
dependencies='docopt>=0.5.0
	          sh>=1.07
              colorlog>=1.8'

case "$1" in
    install|upgrade)
    $virtualenv $DESTDIR
    $DESTDIR/bin/pip install $dependencies
    ;;
    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
